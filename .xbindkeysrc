###Sound control for alsa###
# "pactl set-sink-volume @DEFAULT_SINK@ +10%"
"if [ $(pamixer --get-volume) -gt 0 ]; then pactl set-sink-volume @DEFAULT_SINK@ -10%; fi"
	XF86AudioLowerVolume
# "pactl set-sink-volume @DEFAULT_SINK@ +10%"
"if [ $(pamixer --get-volume) -lt 100 ]; then pactl set-sink-volume @DEFAULT_SINK@ +10%; fi "
	XF86AudioRaiseVolume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute
"playerctl play-pause"
    XF86AudioPause
"playerctl play-pause"
    XF86AudioPlay
"playerctl next"
    XF86AudioNext
"playerctl previous"
    XF86AudioPrev
"xbacklight -inc 10"
    XF86MonBrightnessUp
"xbacklight -dec 10"
    XF86MonBrightnessDown
